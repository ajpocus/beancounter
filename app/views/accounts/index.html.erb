<%= link_to "Create an Account", new_account_path %>

<% if @accounts.any? %>
  <% @accounts.each do |account| %>
    <div class="account">
      <%= link_to account.name, account_path(account) %>
      <span class="balance"><%= number_to_currency account.balance %></span>
    </div>
  <% end %>
<% else %>
  <p class="info">You don't have any accounts yet.</p>
<% end %>